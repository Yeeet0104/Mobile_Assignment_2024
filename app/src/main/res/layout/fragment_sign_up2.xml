<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_login"
    tools:context=".signUp2Fragment" >

    <TextView
        android:id="@+id/lbl_ask_login1_signUp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account?"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/lbl_signUp2_to_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/img_signUp2"
        android:layout_width="320dp"
        android:layout_height="240dp"
        android:src="@drawable/logo_with_tansparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lbl_signUp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="REGISTRATION"
        android:textColor="@color/input_box_background"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_signUp2" />

    <EditText
        android:id="@+id/edt_signUp2_weight"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:background="@drawable/input_box"
        android:drawableLeft="@drawable/ic_weight"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Weight (kg)"
        android:inputType="number"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:paddingRight="10dp"
        android:paddingBottom="8dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/img_signUp2"
        app:layout_constraintStart_toStartOf="@+id/img_signUp2"
        app:layout_constraintTop_toBottomOf="@+id/lbl_signUp2" />

    <EditText
        android:id="@+id/edt_signUp2_height"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/input_box"
        android:drawableLeft="@drawable/ic_height"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="Height (cm)"
        android:inputType="number"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:paddingRight="10dp"
        android:paddingBottom="8dp"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/edt_signUp2_weight"
        app:layout_constraintStart_toStartOf="@+id/edt_signUp2_weight"
        app:layout_constraintTop_toBottomOf="@+id/edt_signUp2_weight" />

    <RadioGroup
        android:id="@+id/rgp_signUp2_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/edt_signUp2_height"
        app:layout_constraintStart_toStartOf="@+id/edt_signUp2_height"
        app:layout_constraintTop_toBottomOf="@+id/edt_signUp2_height">

        <RadioButton
            android:id="@+id/rad_signUp2_male"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="70dp"
            android:text="Male"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rad_signUp2_female"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Female"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />
    </RadioGroup>

    <Button
        android:id="@+id/btn_signUp2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/btn_login"
        android:text="REGISTER"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="@+id/edt_signUp2_height"
        app:layout_constraintStart_toStartOf="@+id/edt_signUp2_height"
        app:layout_constraintTop_toBottomOf="@+id/rgp_signUp2_gender" />

    <TextView
        android:id="@+id/lbl_signUp2_to_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>