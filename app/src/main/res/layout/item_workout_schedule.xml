<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/workoutViewAllContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/schedule_background"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/scheduleIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_workout"
        android:tint="@color/colorIcon" />

    <TextView
        android:id="@+id/scheduleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:text="View All Workout Plans"
        android:textColor="@color/colorTextPrimary"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/viewAllExerciseArrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_right"
        android:tint="@color/colorIcon" />
</LinearLayout>